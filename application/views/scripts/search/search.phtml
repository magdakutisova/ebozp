<div class="box"><?php echo $this->form ?></div>

<?php if ($this->post){?>
<div class="box">
<h3>Výsledky vyhledávání</h3>

<p>Počet nalezených záznamů: <?php echo count($this->clients) + count($this->subsidiaries); ?></p>


<?php if (count($this->clients) > 0){?>

	<h3>Klienti</h3>
	<?php foreach ($this->clients as $client):?>
