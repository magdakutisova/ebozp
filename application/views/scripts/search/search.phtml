	<h3>Pobočky</h3>
	<?php foreach ($this->subsidiaries as $subsidiary):?>
		<h4><a href="<?php echo $this->url(array('clientId' => $subsidiary['clientId'], 'subsidiary' => $subsidiary['subsidiaryId']), 'subsidiaryIndex') ?>"><?php echo $subsidiary['subsidiaryName'] ?></a></h4>
